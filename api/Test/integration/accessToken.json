{
	"setupAndTeardowns": [{
		"id": "generateRandomNbr",
		"actions": [{
			"$set": {
				"randomNbr": { "$random": { "type": "number", "min": 0, "max": 10000 } }
			}
		}]
	}, {
		"id": "createUser",
		"request": {
			"method": "POST",
			"protocol": "http",
			"host": "127.0.0.1",
			"resource": "/volunteer/api/volunteers",
			"headers": {
				"content-type": "application/json"
			},
			"body": {"emailAddress":"test-harvey-${randomNbr}@test.com","firstName":"Harvey","lastName":"Test","familyId":"12345","primaryPhoneNbr":"","password":"harveytest"}
		},
		"expectedResponse": {
			"statusCode": 200
		},
		"actions": [{
			"$set": {
				"test-user-id": {
					"$extract": "body.id"
				}
			}
		}]
	}, {
		"id": "removeUser",
		"request": {
			"method": "DELETE",
			"protocol": "http",
			"host": "127.0.0.1",
			"resource": "/volunteer/api/test/volunteers/${test-user-id}"
		},
		"expectedResponse": {
			"statusCode": 204
		}
	}],
	"suiteSetup": ["generateRandomNbr", "createUser"],
	"suiteTeardown": ["removeUser"],
	"tests": [{
		"id": "POST /accessToken - Accepts valid credentials",
		"request": {
			"method": "POST",
			"protocol": "http",
			"host": "127.0.0.1",
			"resource": "/volunteer/api/accessToken",
			"headers": {
				"content-type": "application/json"
			},
			"body": {
				"emailAddress": "test-harvey-${randomNbr}@test.com",
				"password": "harveytest"
			}
		},
		"expectedResponse": {
			"statusCode": 200
	 	}
	}, {
		"id": "POST /accessToken - Denies invalid credentials",
		"request": {
			"method": "POST",
			"protocol": "http",
			"host": "127.0.0.1",
			"resource": "/volunteer/api/accessToken",
			"headers": {
				"content-type": "application/json"
			},
			"body": {
				"emailAddress": "test-harvey-${randomNbr}@test.com",
				"password": "bad credentials"
			}
		},
		"expectedResponse": {
			"statusCode": 401
		}
	}, {
		"id": "POST /accessToken - Accepts wrong casing on username",
		"request": {
			"method": "POST",
			"protocol": "http",
			"host": "127.0.0.1",
			"resource": "/volunteer/api/accessToken",
			"headers": {
				"content-type": "application/json"
			},
			"body": {
				"emailAddress": "TEST-HARVEY-${randomNbr}@TEST.COM",
				"password": "harveytest"
			}
		},
		"expectedResponse": {
			"statusCode": 200
	 	}
	}, {
		"id": "POST /accessToken - Denies wrong casing on password",
		"request": {
			"method": "POST",
			"protocol": "http",
			"host": "127.0.0.1",
			"resource": "/volunteer/api/accessToken",
			"headers": {
				"content-type": "application/json"
			},
			"body": {
				"emailAddress": "test-harvey-${randomNbr}@test.com",
				"password": "HARVEYTEST"
			}
		},
		"expectedResponse": {
			"statusCode": 401
		}
	}]
}